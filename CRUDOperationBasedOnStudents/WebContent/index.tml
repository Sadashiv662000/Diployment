<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Simple Signup Form</title>
    <style>
        /* Basic styling, you can customize this as needed */
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 20px;
        }

        .container {
            max-width: 400px;
            margin: 0 auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            text-align: center;
        }

        input[type="tel"],
        input[type="submit"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            border-radius: 4px;
            border: 1px solid #ccc;
            box-sizing: border-box;
        }

        input[type="submit"] {
            background-color: #007bff;
            color: #fff;
            cursor: pointer;
        }

        input[type="submit"]:hover {
            background-color: #0056b3;
        }
    </style>
</head>

<body>
    <div class="container">
        <h2>Sign Up</h2>
        <form id="signupForm">
            <label for="phoneNumber">Mobile Number:</label>
            <input type="tel" id="phoneNumber" name="phoneNumber" placeholder="Enter your mobile number" required>
            <input type="submit" value="Sign Up">
        </form>
    </div>

    <script>
        document.getElementById("signupForm").addEventListener("submit", function (event) {
            event.preventDefault();
            const phoneNumber = document.getElementById("phoneNumber").value;
            // You can add further processing or validation here
            console.log("Phone Number:", phoneNumber);
            // For a real application, you might send this data to a server using AJAX or fetch()

            // Redirect to login.html after form submission
            window.location.href = "login.html";
        });
    </script>
</body>

</html>
